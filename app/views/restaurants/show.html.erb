<h1>Restaurant Show</h1>

<h2><%= @restaurant.name %></h2>
<p>Catergory: <%= @restaurant.category %></p>
<p>Address: <%= @restaurant.address %></p>
<p>Phone Number: <%= @restaurant.phone_number %></p>
<p><%= link_to "All Restaurants", restaurants_path %></p>
<p><%= link_to "Edit restaurant", edit_restaurant_path(@restaurant) %></p>
<p><%= link_to "Delete", restaurant_path(@restaurant),
      method: :delete,
      data: { confirm: "Are you sure?" } %></p>
<br>
<h3>Reviews:</h3>
<p><% @restaurant.reviews.each do |x| %> </p>
   <p> <%= x.content %> <%= x.rating  %> </p>
   <% end %>

<%=link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>


